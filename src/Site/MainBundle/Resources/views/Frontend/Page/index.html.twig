{% extends 'SiteMainBundle:Frontend:layout.html.twig' %}

{% from 'SiteMainBundle:Frontend/Player:macros.html.twig' import listPlayers %}
{% from 'SiteMainBundle:Frontend/Director:macros.html.twig' import listDirectors %}

{% block title %}{{ page.title }}{% endblock %}
{% block meta_description %}{{ page.metaDescription }}{% endblock %}
{% block meta_keywords %}{{ page.metaKeywords }}{% endblock %}

{% block content %}
    <div class="wrap_content">
        <div class="content {% if page.parent.id is defined %}content-top{% endif %}">
            {% if players is defined %}
                {{  listPlayers(players) }}
            {% endif %}
            {% if directors is defined %}
                {{  listDirectors(directors) }}
            {% endif %}
            {% if page.slug == 'kontakty' %}
                <div class="map">
                    <script type="text/javascript" charset="utf-8" src="//api-maps.yandex.ru/services/constructor/1.0/js/?sid=iVkQZkFYQa0dMXd2X1kfFaaHE-8TlP89&width=100%&height=450"></script>
                </div>
            {% endif %}
            {{ page.text|raw }}
        </div>
    </div>
{% endblock %}