<table class="results">
    <tbody>
        {% for opinion in poll.opinions %}
            <tr>
                <th>{{ opinion }}</th>
                <td class="sub_total">
                    {% if opinion.votes == 0 %}
                        0
                    {% else %}
                        {{ opinion.votes }}
                    {% endif %}
                    ({{ opinion.votesPercentage }}%)
                </td>
                <td>
                    <div class="graph_bar">
                        <div class="fill fill_color_{{ loop.index  }}" style="width: {{ opinion.votesPercentage }}%">
                            &nbsp;
                        </div>
                    </div>
                </td>
            </tr>
        {% endfor %}
    </tbody>
    <tfoot>
        <tr>
            <td>
                <table>
                    <tr>
                        <td>
                            {% if hasVoted %}
                                &nbsp;
                            {% else %}
                                <a href="{{ path('PrismPollBundle_frontend_poll_vote', {'pollId': poll.id }) }}" class="see_form">{{ 'frontend.poll.vote'|trans({}, 'poll') }}</a>
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <td class="total">
                            {{ 'frontend.poll.total'|trans({}, 'poll') }}:
                            {% set total = poll.totalVotes  %}
                            {{ total }} {{ 'frontend.poll.votes'|trans({}, 'poll') }}
                        </td>
                    </tr>
                </table>

            </td>
        </tr>
    </tfoot>
</table>