{% extends 'SiteMainBundle:Backend:layout.html.twig' %}

{% block content -%}
    <h1>{{ 'backend.announcement.h1_show'|trans({}, 'menu') }}</h1>

    {{ form(delete_form) }}

    <table class="record_properties table table-striped table-bordered">
        <tbody>
        <tr>
            <th>{{ 'backend.announcement.title'|trans({}, 'menu') }}</th>
            <td>{{ entity.title }}</td>
        </tr>
        <tr>
            <th>{{ 'backend.announcement.description'|trans({}, 'menu') }}</th>
            <td>{{ entity.description }}</td>
        </tr>
        <tr>
            <th>{{ 'backend.announcement.img'|trans({}, 'menu') }}</th>
            <td><a href="{{ asset(entity.webPath) }}" target="_blank"><img src="{{ image(entity.webPath).resize(150) }}" alt="{{ entity.title }}" width="150px"/></a></td>
        </tr>
        <tr>
            <th>{{ 'backend.announcement.date'|trans({}, 'menu') }}</th>
            <td>{{ entity.date|date('d.m.Y') }}</td>
        </tr>
        <tr>
            <th>{{ 'backend.announcement.metatitle'|trans({}, 'menu') }}</th>
            <td>{{ entity.metaTitle }}</td>
        </tr>
        <tr>
            <th>{{ 'backend.announcement.metadescription'|trans({}, 'menu') }}</th>
            <td>{{ entity.metaDescription }}</td>
        </tr>
        <tr>
            <th>{{ 'backend.announcement.metakeywords'|trans({}, 'menu') }}</th>
            <td>{{ entity.metaKeywords }}</td>
        </tr>
        </tbody>
    </table>

    <ul class="record_actions nav nav-pills">
        <li>
            <a href="{{ path('backend_announcement_index') }}">
                {{ 'backend.announcement.back_to_list'|trans({}, 'menu') }}
            </a>
        </li>
        <li>
            <a href="{{ path('backend_announcement_edit', { 'id': entity.id }) }}">
                {{ 'backend.edit'|trans({}, 'menu') }}
            </a>
        </li>
        <li>
            <a href="{{ path('backend_announcement_new') }}">
                {{ 'backend.create'|trans({}, 'menu') }}
            </a>
        </li>
    </ul>
{% endblock %}
