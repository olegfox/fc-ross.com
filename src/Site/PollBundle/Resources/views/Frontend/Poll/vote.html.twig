{% form_theme form 'PrismPollBundle:Frontend:form_custom_layout.html.twig' %}

<form action="{{ path('PrismPollBundle_frontend_poll_vote', {'pollId': poll.id }) }}" method="post" novalidate="novalidate" {{ form_enctype(form) }}>

    {{ form_errors(form.opinions) }}
    {{ form_widget(form.opinions) }}

    {{ form_rest(form) }}

    <input type="submit" value="{{ 'frontend.poll.submit'|trans({}, 'poll') }}" />
</form>

<a href="{{ path('PrismPollBundle_frontend_poll_results', {'pollId': poll.id }) }}" class="see_results">{{ 'frontend.poll.see'|trans({}, 'poll') }}</a>